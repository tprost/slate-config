# Abstract positions
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias left move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias right move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias top move screenOriginX;screenOriginY screenSizeX;screenSizeY/2
alias bottom move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2
alias top-left corner top-left resize:screenSizeX/2;screenSizeY/2
alias top-right corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottom-left corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottom-right corner bottom-right resize:screenSizeX/2;screenSizeY/2
alias center move screenOriginX+screenSizeX/10;screenOriginY+screenSizeY/10 screenSizeX*8/10;screenSizeY*8/10
alias mod alt,cmd

bind space:${mod} ${full}

bind k:${mod} ${left}
bind ;:${mod} ${right}
bind .:${mod} ${bottom}
bind o:${mod} ${top}
bind p:${mod} ${top-right}
bind i:${mod} ${top-left}
bind ,:${mod} ${bottom-left}
bind /:${mod} ${bottom-right}
bind l:${mod} ${center}

bind m:${mod} throw next

bind a:${mod},shift focus 'Anki'
bind c:${mod},shift focus 'Google Chrome'
bind e:${mod},shift focus 'Emacs'
bind f:${mod},shift focus 'Finder'
bind j:${mod},shift focus '辞書'
bind k:${mod},shift focus 'Skype'
bind l:${mod},shift focus 'LINE'
bind p:${mod},shift focus 'プレビュー'
bind r:${mod},shift focus 'Renoise'
bind s:${mod},shift focus 'システム環境設定'
bind t:${mod},shift focus 'ターミナル'
bind v:${mod},shift focus 'VLC'

bind tab:cmd switch
